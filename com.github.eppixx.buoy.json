{
    "app-id" : "com.github.eppixx.buoy",
    "runtime" : "io.elementary.Platform",
    "runtime-version" : "7.3",
    "sdk" : "io.elementary.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "buoy",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--share=network",
        "--socket=session-bus",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "buoy",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [ "-Doffline=true" ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                "cargo-sources.json"
            ]
        }
    ]
}
